<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity">

    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Change"
        app:layout_constraintStart_toStartOf="@+id/inputReenterChangePasswordEditText"
        app:layout_constraintTop_toBottomOf="@+id/inputReenterChangePasswordEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter old password"
        app:layout_constraintBottom_toTopOf="@+id/inoutOldPasswordEditText"
        app:layout_constraintStart_toStartOf="@+id/inoutOldPasswordEditText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reenter new password"
        app:layout_constraintBottom_toTopOf="@+id/inputReenterChangePasswordEditText"
        app:layout_constraintStart_toStartOf="@+id/inputReenterChangePasswordEditText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new password"
        app:layout_constraintBottom_toTopOf="@+id/inputChangePasswordEditText"
        app:layout_constraintStart_toStartOf="@+id/inputChangePasswordEditText" />

    <EditText
        android:id="@+id/inoutOldPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputReenterChangePasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputChangePasswordEditText" />

    <EditText
        android:id="@+id/inputChangePasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inoutOldPasswordEditText" />

    <Button
        android:id="@+id/cancelChangePasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/inputReenterChangePasswordEditText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/changePasswordButton"
        app:layout_constraintTop_toBottomOf="@+id/inputReenterChangePasswordEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>